@model IEnumerable<Platec.Models.Course>

@{
    ViewData["Title"] = "Courses Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Overview</h2>
        <a href="/Courses/AddCourse" class="btn btn-success">
            <i class="bi bi-plus"></i> Add Course
        </a>
    </div>

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@course.CourseName</h5>

                        <p class="card-text">
                            <strong>Students:</strong> @course.Students.Count
                        </p>

                        <p class="card-text">
                            <strong>Teacher:</strong>
                            @(course.Teacher != null ? course.Teacher.Email : "None")
                        </p>

                        <a asp-controller="Courses"
                           asp-action="CoursesDetails"
                           asp-route-id="@course.CourseId"
                           class="btn btn-primary">
                            View Details
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-body h5 {
        font-weight: bold;
    }
</style>

@section Scripts {
    <script>
        $(document).on("click", ".view-details-btn", function () {
            var courseId = $(this).data("id");

            $("#courseDetailsContent").load(
                "/Courses/CourseDetails/" + courseId,
                function () {
                    $("#courseDetailsModal").modal("show");
                }
            );
        });
    </script>
}
